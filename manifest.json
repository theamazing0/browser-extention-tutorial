{

  "manifest_version": 2,
  "name": "Pad",
  "version": "1.0",

  "description": "Take notes while browsing the web",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Pad",
    "default_popup": "popup/popup.html"
  }

}
